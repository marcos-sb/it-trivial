class Pregunta {	private var _enunciado:String;	private var _respuesta1:String;	private var _respuesta2:String;	private var _respuesta3:String;	private var _color:Number;  private var _correcta:Number;		public function Pregunta(enunciado:String, resp1:String, resp2:String, resp3:String, color:Number													 , correcta:Number) {		_enunciado = enunciado;		_respuesta1 = resp1;		_respuesta2 = resp2;		_respuesta3 = resp3;		_color = color;		_correcta = correcta;	}	public function esCorrecta(n:Number):Boolean {		return _correcta == n;	}	public function getQuestion():String {		return _enunciado;	}	public function getAnswers():Array {		var arrResp:Array = new Array(4);		arrResp[0] = _respuesta1;		arrResp[1] = _respuesta2;		arrResp[2] = _respuesta3;		return arrResp;	}}