class Ficha extends MovieClip {	private var _numQuesitos:Number;  // num de quesitos que ha conseguido	private var _color:Number;	private var _casilla:Casilla;  // casilla en la que se encuentra	private var _movs:Array = new Array();  // almacena los resultados la funcion getMovs	public var _mc:MovieClip;	private var _cheesy_ar:Array;		// constructor	public function Ficha(color:Number, casilla:Casilla) {		this._mc = _level0.attachMovie('ficha', 'ficha_mc'+_global.depth, _global.depth++);		this._mc.gotoAndStop(color);		this._casilla = casilla;		this._mc._x = this._casilla.getX();		this._mc._y = this._casilla.getY();		this._numQuesitos = 0;		this._color = color;		this._cheesy_ar = new Array();	}	public function isFull():Boolean {		return _numQuesitos == 6;	}	public function addCheesy() {		var color = _casilla.getColor();		var depth:Number = color;		var temp:MovieClip;		_cheesy_ar[color] = true;		temp = this._mc.attachMovie("quesito", "quesito_mc", depth);		temp.gotoAndStop(color);		_numQuesitos++;	}	public function gotCheesy() {		return _cheesy_ar[_casilla.getColor()];	}	public function getCasilla():Casilla {		return this._casilla;	}	public function getColor():Number {		return this._color;	}	public function moveTo(c:Casilla) {		this._casilla = c;		this._mc._x = c.getX();		this._mc._y = c.getY();	}}