class Casilla {	private var _number:Number;	private var _numRel:Number;	private var _color:Number;	private var _esQuesito:Boolean;	private var _rel:Array = new Array();	private var _mc:MovieClip;	private var _over:Boolean = false;	private var _posX:Number;	private var _posY:Number;		public function Casilla(color:Number, number:Number, esQuesito:Boolean) {		this._mc = _level0.attachMovie("casilla", "casilla_mc", _global.depth2++);		this._mc.gotoAndStop(1);		this._mc.casilla = this;		this._mc._visible = false;		this._mc.onRollOver = function() {			this._over = true;		}		this._mc.onRollOut = function() {			this._over = false;		}		this._mc.onMouseDown = function() {			if(_over) {				_level0.players[_global.currentPlayer].moveTo(this.casilla);			  if(this.casilla._color == 7) {  // casilla gris (los dados)			    _level0.throwDice(_global.currentPlayer);			  } else {				  _level0.question(_color);			  }			}		}		this._esQuesito = esQuesito;		this._color = color;		this._number = number;		this._rel = [];		this._numRel = 0;	}	public function esQuesito() {		return _esQuesito;	}	public function visibility(vis:Boolean) {		if(vis) {			this._mc._visible = true;			this._mc.gotoAndPlay(1);		} else {			this._mc._visible = false;			this._mc.gotoAndStop(1);		}	}	public function setX(pos:Number) {		_posX = pos;		_mc._x = pos;	}	public function setY(pos:Number) {		_posY = pos;		_mc._y = pos;	}	public function getX() {		return _posX;	}	public function getY() {		return _posY;	}	public function añadirRel(c:Casilla) {		this._rel[this._numRel] = c;		this._numRel++;	}	public function getColor() {		return _color;	}	public function getRel(n:Number):Casilla {		return this._rel[n];	}	public function getNumRel():Number {		return _numRel;	}	public function toString():String {		return _posX + ' x ' + _posY + "   " + _number;	}}