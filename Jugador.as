class Jugador {	private var _tablero:Tablero;	private var _ficha:Ficha;	private var _nombre:String;	private var _dado:Dado;	var lastThrow:Number;		public function Jugador(nombre:String, color:Number, tablero:Tablero) {		this._nombre = nombre;		this._tablero = tablero;		this._ficha = new Ficha(color, this._tablero.getCasilla(72));		this._dado = new Dado();	}	public function isFull():Boolean {		return _ficha.isFull();	} 	public function throwDice():Number {		this.lastThrow = this._dado.tirar();		return this.lastThrow;	}	public function getFicha() {		return _ficha;	}	public function getCasillaColor() {		return _ficha.getCasilla().getColor();	}	public function gotCheesy() {		return _ficha.gotCheesy();	}	public function overCheesy() {		return _ficha.getCasilla().esQuesito();	}	public function addCheesy() {		_ficha.addCheesy();	}  public function getMovs() {		return this._tablero.findMovs(this.lastThrow, this._ficha.getCasilla());	}	public function getName():String {		return this._nombre;	}	public function moveTo(c:Casilla) {		_ficha.moveTo(c);	}	public function toString():String {		return this._nombre;	}}